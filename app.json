{
  "expo": {
    "name": "KlinkarTODO",
    "slug": "KlinkarTODO",
    "description": "Приложение-тудушка в качестве тестового задания Клинкар",
    "version": "1.0.0",
    "platforms": ["ios", "android"],
    "githubUrl": "https://github.com/Illbeblack/KlinkarTODO",
    "orientation": "portrait",
    "icon": "./assets/images/icons/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "backgroundColor": "#DCDCDC",
    "primaryColor": "#6C38CC",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#DCDCDC"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#DCDCDC"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/FiraSans-Regular.ttf",
            "./assets/fonts/FiraSans-SemiBold.ttf"
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
